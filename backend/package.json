{
  "name": "@evaly/backend",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "prepare": "bun tsup src/index.ts src/types/*.ts --dtsestion-by-reference-id.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "db:studio": "drizzle-kit studio",
    "db:generate": "bunx drizzle-kit generate --dialect postgresql --schema ./src/lib/db/schema --out ./drizzle",
    "db:migrate": "bun db:generate && bun run src/lib/db/migrate.ts && bun build:tsup",
    "db:push": "bunx drizzle-kit push",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/eden": "^1.2.0",
    "@elysiajs/swagger": "^1.2.2",
    "@sinclair/typebox": "^0.34.28",
    "better-auth": "^1.2.2",
    "dotenv": "^16.4.7",
    "drizzle-kit": "0.30.5",
    "drizzle-orm": "0.40.0",
    "drizzle-typebox": "^0.3.0",
    "elysia": "latest",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.4",
    "bun-types": "latest",
    "tsup": "^8.4.0"
  },
  "overrides": {
    "@sinclair/typebox": "^0.34.27"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    }
  },
  "type": "module"
}
